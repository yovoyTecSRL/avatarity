{
  "name": "avatarity",
  "version": "1.0.0",
  "description": "Ambiente local para TalkingHead - Avatares 3D interactivos",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
